{
	"name": "electron-angular-webpack",
	"version": "1.0.0",
	"description": "A simple kit for Electron, Angular 4 and Webpack 3 including a live reload system for Angular.",
	"repository": "https://github.com/lbassin/electron-angular-webpack",
	"homepage": "https: //github.com/lbassin/electron-angular-webpack#readme",
	"bugs": {
		"url": "https://github.com/lbassin/electron-angular-webpack/issues"
	},
	"keywords": [
		"electron",
		"angular",
		"webpack",
		"boilerplate",
		"live reload",
		"typescript",
		"sass"
	],
	"author": "BASSIN Laurent & MARQUET Maxime",
	"license": "MIT",
	"main": "dist/electron.js",
	"scripts": {
		"dev": "tsc electron.ts --outDir ./dist && cross-env NODE_ENV=dev webpack-dev-server --port=4200",
		"prod": "webpack && electron .",
		"packager:win": "cross-env NODE_OS=win node builder/packager.js",
		"packager:mac": "cross-env NODE_OS=mac node builder/packager.js",
		"packager:linux": "cross-env NODE_OS=linux node builder/packager.js",
		"installer:win": "npm run packager:win && cross-env NODE_OS=win node builder/installer.js",
		"installer:mac": "npm run packager:mac && cross-env NODE_OS=mac node builder/installer.js",
		"installer:linux": "npm run packager:linux && cross-env NODE_OS=linux node builder/installer.js"
	},
	"devDependencies": {
		"clean-webpack-plugin": "^0.1.17",
		"concurrently": "^3.5.0",
		"cross-env": "^5.1.1",
		"css-loader": "^0.28.7",
		"electron-packager": "^9.1.0",
		"extract-loader": "^1.0.1",
		"file-loader": "^1.1.5",
		"html-loader": "^0.5.1",
		"html-webpack-plugin": "^2.30.1",
		"img-loader": "^2.0.0",
		"node-sass": "^4.5.3",
		"postcss-loader": "^2.0.8",
		"raw-loader": "^0.5.1",
		"resolve-url-loader": "^2.2.0",
		"sass-loader": "^6.0.6",
		"ts-loader": "^3.1.0",
		"typescript": "^2.5.3",
		"uglifyjs-webpack-plugin": "^1.0.1",
		"url-loader": "^0.6.2",
		"webpack": "^3.8.1",
		"webpack-dev-server": "^2.9.3"
	},
	"optionalDependencies": {
		"appdmg": "^0.5.1",
		"electron-installer-debian": "^0.6.0",
		"electron-installer-dmg": "^0.2.1",
		"electron-squirrel-startup": "^1.0.0",
		"electron-winstaller": "^2.6.3"
	},
	"dependencies": {
		"@angular/common": "^4.4.6",
		"@angular/compiler": "^4.4.6",
		"@angular/core": "^4.4.6",
		"@angular/forms": "^4.4.6",
		"@angular/http": "^4.4.6",
		"@angular/platform-browser": "^4.4.6",
		"@angular/platform-browser-dynamic": "^4.4.6",
		"@angular/router": "^4.4.6",
		"angular-in-memory-web-api": "^0.3.2",
		"core-js": "^2.5.1",
		"electron": "^1.7.9",
		"rxjs": "^5.5.2",
		"zone.js": "^0.8.18"
	}
}
